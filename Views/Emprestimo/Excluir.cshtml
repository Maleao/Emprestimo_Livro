@model EmprestimosModel
@{
    ViewData["title"] = "Excluir Empréstimo";
}

<div class="container bg-dark p-5 rounded-3">

    <div class="mb-5 text-center">
        <h1 class="text-light">Exclusão de Empréstimos</h1>
    </div>

    <form method="post" asp-controller="Emprestimo" asp-action="Excluir">

        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label for="Recebedor" class="col-sm-2 col-form-label text-light">Recebedor:</label>
            <input type="text" asp-for="Recebedor" class="form-control" id="Recebedor" placeholder="Quem está recebendo o livro?" disabled>
        </div>

        <div class="mb-3">
            <label for="Fornecedor" class="col-sm-2 col-form-label text-light">Fornecedor: </label>
            <input type="text" asp-for="Fornecedor" class="form-control" id="Fornecedor" placeholder="Quem está emprestando?" disabled>
        </div>

        <div class="mb-3">
            <label for="Livro" class="col-sm-2 col-form-label text-light">Livro: </label>
            <input type="text" asp-for="LivroEmprestado" class="form-control" id="Livro" placeholder="Qual é o livro?" disabled>
        </div>

        <div class=" d-flex mt-5 gap-5">
            <button type="submit" class="btn btn-danger mb-3 w-50">Excluir</button>
            <a class="btn btn-primary w-50 mb-3" asp-controller="Emprestimo" asp-action="Index">Voltar</a>
        </div>


    </form>

</div>